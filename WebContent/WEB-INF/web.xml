<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

 <web-app>
   <display-name>Channel Subscription Servlets</display-name>
   <context-param>
     <param-name>BDBstore</param-name>
     <param-value>database</param-value>
   </context-param>
    
	<servlet>
		<servlet-name>xpath</servlet-name>
		<servlet-class>edu.upenn.cis455.servlet.XPathServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>addchannel</servlet-name>
		<servlet-class>edu.upenn.cis455.servlet.AddChannelServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>homepage</servlet-name>
		<servlet-class>edu.upenn.cis455.servlet.HomePageServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>openchannel</servlet-name>
		<servlet-class>edu.upenn.cis455.servlet.OpenChannelServlet</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>xpath</servlet-name>
		<url-pattern>/xpath</url-pattern>
	</servlet-mapping>
	
	
	<servlet-mapping>
		<servlet-name>addchannel</servlet-name>
		<url-pattern>/addchannel</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>homepage</servlet-name>
		<url-pattern>/homepage</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>openchannel</servlet-name>
		<url-pattern>/openchannel</url-pattern>
	</servlet-mapping>

   <!-- add any additional servlets and servlet mappings here -->

</web-app>
